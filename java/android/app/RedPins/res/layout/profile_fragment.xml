<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:background="#FFFFFF"
        android:text="Test User"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageView
        android:id="@+id/userImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="" />

    <TextView
        android:id="@+id/myEventsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/userName"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="30dp"
        android:text="My Events"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ListView
        android:id="@+id/myEventsListView"
        android:layout_width="fill_parent"
        android:layout_height="230dp"
        android:layout_below="@id/myEventsLabel" />

    <TextView
        android:id="@+id/bookmarksLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/myEventsListView"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:text="Liked Events"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ListView
        android:id="@+id/bookmarksListView"
        android:layout_width="fill_parent"
        android:layout_height="230dp"
        android:layout_below="@id/bookmarksLabel" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:text="Test User"
        android:background="#FFFFFF"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/myEventsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/userName"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="50dp"
        android:text="My Events"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <ListView
        android:id="@+id/myEventsListView"
        android:layout_width="fill_parent"
        android:layout_height="275dp"
        android:layout_weight="2.16"
        android:layout_below="@+id/myEventsLabel"
    />

    <TextView
        android:id="@+id/bookmarksLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/myEventsListView"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="My Bookmarks"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
     <ListView
        android:id="@+id/bookmarksListView"
        android:layout_width="fill_parent"
        android:layout_height="275dp"
        android:layout_weight="2.16"
        android:layout_below="@+id/myBookmarksLabel"
    />

</RelativeLayout>